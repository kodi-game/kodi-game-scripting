<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>Kodi Game Addons</title>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.12/css/dataTables.bootstrap.min.css">
<script type="text/javascript" src="https://code.jquery.com/jquery-1.12.3.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.12/js/dataTables.bootstrap.min.js"></script>
<script type="text/javascript" class="init">
$(document).ready(function() {
    $('#table').DataTable();
});
</script>
</head>

<body>
<div class="container">
<h1>Kodi Game Addons</h1>
<table id="table" class="table table-striped table-bordered" width="100%" cellspacing="0">
	<thead>
		<tr>
			<th>Libretro core</th>
			<th>Platform emulated</th>
			<th>Version</th>
			<th>License</th>
			<th>Supports VFS</th>
			<th>Supports Rewind</th>
			<th>Requires GL</th>
			<th>Status</th>
		</tr>
	</thead>
	<tbody>
		{% for addon in addons %}
		<tr>
			<td>{{ addon.game.name }} / {{ addon.game.addon }}</td>
			<td></td>
			<td>{{ addon.system_info.version }}</td>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
			<td>{{ addon.library.loaded }} {{ addon.library.file }} {{ addon.library.error | default('') }}</td>
		</tr>
		{% endfor %}
	</tbody>
</table>
</div>
</body>
</html>

